{
  "version": 2,
  "builds": [
    { "src": "drug-api.js", "use": "@vercel/node" },
    { "src": "药物检索3.html", "use": "@vercel/static" }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/drug-api.js",
      "methods": ["GET", "OPTIONS"]
    },
    { 
      "src": "/", 
      "dest": "/药物检索3.html"
    },
    {
      "src": "/(.*)",
      "dest": "/药物检索3.html"
    }
  ]
}
